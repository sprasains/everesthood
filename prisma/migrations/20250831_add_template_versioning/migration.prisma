// Add versioning to AgentTemplate and create version history
model AgentTemplateVersion {
  id          String   @id @default(cuid())
  templateId  String
  version     Int
  config      Json
  prompt      String
  tools       Json?
  createdAt   DateTime @default(now())
  template    AgentTemplate @relation(fields: [templateId], references: [id])

  @@unique([templateId, version])
}

// Add relationship to AgentTemplate
model AgentTemplate {
  id             String   @id @default(cuid())
  name           String   @unique
  description    String
  prompt         String
  version        Int      @default(1)
  tools          Json?
  category       String?
  isPublic       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime?
  instances      AgentInstance[]
  versions       AgentTemplateVersion[]

  @@index([deletedAt])
  @@index([category])
  @@index([name])
}
