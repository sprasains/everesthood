{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/services/*": ["./app/services/*"]
      }
  },
  "include": ["next-env.d.ts", "app/**/*.ts", "app/**/*.tsx", "app/components/**/*.ts", "app/components/**/*.tsx", "app/hooks/**/*.ts", "app/hooks/**/*.tsx", "app/services/**/*.ts", "app/services/**/*.tsx", "lib/**/*.ts", "lib/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "."
    }
  }
}
